{
  "name": "music-genre-ator",
  "version": "2.0.0",
  "description": "A music genre generator",
  "main": "app.js",
  "author": "Alex Torrance",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "music-genre-lastfm-utils": "github:alextea/music-genre-lastfm-utils",
    "nunjucks": "^3.2.4",
    "pg": "^8.16.3",
    "sass": "^1.97.1"
  },
  "scripts": {
    "deploy": "npm run build-css && npm run copy-images",
    "postinstall": "npm run deploy",
    "init-db": "node utils/init_database.js",
    "migrate-data": "node migration/import_to_postgres.js",
    "copy-images": "cp -r images public/",
    "build-css": "sass --style compressed ./sass:./public/styles",
    "watch-css": "sass -w ./sass:./public/styles",
    "dev-server": "nodemon app.js",
    "dev-start": "npm run copy-images && npm-run-all -p watch-css dev-server",
    "start": "node app.js"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "npm-run-all": "^4.1.5"
  }
}
